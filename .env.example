# DevCycle (feature flags)
DEVCYCLE_API_KEY=your_devcycle_api_key_here
DEVCYCLE_ENVIRONMENT=development

# Database
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# JWT
JWT_SECRET=your_jwt_secret_here

# SMTP
SMTP_HOST=smtp.example.com
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_PORT=587

# Site
SITE_URL=https://your-site.example.com
SITE_NAME=Dijital Sosyal Hak Platformu

# Localization (optional – defaults to 'tr')
APP_LANG=tr

# Datadog APM (optional – leave blank to disable)
DD_API_KEY=
DD_APP_KEY=
DD_SERVICE=dijital-sosyal-hak-platformu
DD_ENV=production
DD_VERSION=1.0.0

# Doppler (set automatically by the Doppler CLI; leave blank for .env fallback)
# DOPPLER_PROJECT=dijital-sosyal-hak-platformu
# DOPPLER_CONFIG=dev
